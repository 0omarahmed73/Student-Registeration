<!DOCTYPE html>
<%- include('../components/head.ejs') %>
<body>
  <div class="container-both">
    <%- include('../components/sidebar') %>
        <div class="left-part">
          <%- include('../components/nav') %>
          <div class="mainSection2">
            <div class="container">
              <div class="both">
                <div class="title-with-icon">
                  <a onclick="done()"><div class="backIcon">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                  </div></a>
                  <h2 class="slate-title">اضافة شعبة جديدة</h2>
                </div>
                <div class="allCert"> 
                  <div class="cert">
                    <div class="upperPart">
                      <p class="certificateName">اسم القسم</p>
                      <p class="certificateName added"><%= section %></p>
                    </div>
                  </div> 
                  <div class="cert">
                    <div class="upperPart added">
                    </div>
                    <div class="addedPart">
                      <form class="ourForm" action="" method="post">
                        <div class="form-container">
                          <div class="control">
                            <input style="margin-right: 0;" type="text" name="slateCode" id="slateCode" value="<%= sectionCode %>" hidden>
                          </div>
                          <div class="control">
                            <label for="sectionBranchDesc">وصف الشعبة باللغة العربية<span> *</span></label>
                            <input style="margin-right: 0;" type="text" name="sectionBranchDesc" id="sectionBranchDesc" required>
                          </div>
                          <div class="control control-grid">
                            <label for="sectionBranchCode" id="pointCode2">كود الشعبة</label>
                            <input style="margin-right: 40px;" type="number" name="sectionBranchCode" id="sectionBranchCode" >
                          </div>
                          <div class="buttons">
                            <a><button>حفظ</button></a>
                            <a class="button" onclick="done()"><div >إلغاء</div></a>
                          </div>
                        </div> 
                        <%- include('../components/toast.ejs') %>                           
                      </form>
                    </div>
                  </div> 
              </div>
              </div>
          </div>
      </div>
    </div>  
  </div>  
  <script src="/main.js"></script> 
  <script>
        function returnBack(){
      window.location.href = document.referrer;
    }

    window.sessionStorage.setItem(document.querySelectorAll('input')[0].id , '' )
    document.querySelectorAll('input').forEach(el => {
      console.log(el);
      if (window.sessionStorage.getItem(el.id) ) {
        el.value = window.sessionStorage.getItem(el.id)
      }
      else {
        el.value = '';
      }
    if (el !== document.querySelector("#hide")){
      el.addEventListener('input' , () => {
      window.sessionStorage.setItem(el.id , el.value)
        })
    }
      })
      document.querySelector('.ourForm').action = `/home/section/${location.pathname.split('/')[3]}/submitBranch`
  </script> 
</body>
</html>